<root type="enemy">

  <bestiary>
    <name value="$BESTIARY_EARLY_NAME" />
    <desc value="$BESTIARY_EARLY_DESC" />
  </bestiary>
  <genre>early</genre>

  <speed min="1.5" max="1.6" />
  <strength min="10.0" max="25.0" />
  <turnspeed min="60.0" max="80.0" />
  <shadow-offset min="0.12" max="0.12" />

  <maxhp min="80.0" max="90.0" />
  <maxmana min="30.0" max="50.0" />

  <xp min="28.0" max="35.0" />

  <scale min="0.7" max="0.9" />
  <radius min="0.3" max="0.4" />
  <mass min="3.0" max="3.0" />

  <animset>
  	<anim type="default"  name="core/anim/early/default" />
  	<anim type="move"     name="core/anim/early/move" />
  	<anim type="attack"   name="core/anim/early/attack" />
  	<anim type="death"    name="core/anim/early/death" />
  </animset>
  <animset>
  	<anim type="default"  name="core/anim/early-winged/default" />
