  	<anim type="attack"   name="core/anim/early-winged/attack" />
  	<anim type="death"    name="core/anim/early/death" />
  </animset>

  <ai name="boid-chaser" />

  <ability name="data/abilities/monster/burnmana.xml" default="1" />
  <ability name="data/abilities/monster/troll-regeneration.xml" />

  <sound type="attack" filename="data/sounds/EL/imp03.ogg" />
  <sound type="spawn" filename="data/sounds/EL/imp01.ogg" />
  <sound type="damaged" filename="data/sounds/EL/imp02.ogg" />
  <sound type="death" filename="data/sounds/EL/imp04.ogg" />

