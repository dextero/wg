<root type="loot">
    <name name="$ITEM_HEALTH" />
    <genre>health</genre>
    <image filename="data/loots/health.png" />
    <effect type="list">
        <effect type="console">
            <text>[
                msg $MSG_FOUND $ITEM_HEALTH
                ]</text>
        </effect>
        <effect type="heal">
            <amount calc="10 + (5 * level)" />
            <show-amount />
        </effect>
    </effect>
</root>
