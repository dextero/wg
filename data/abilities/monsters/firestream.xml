<root type="ability" class="self">

  <effect type="recastable" >
    <recast value="0.10" />
    <time value="2.0" />
    <effect type="list">
      <effect type="sound">
        <name value="data/sounds/Lugaro/fireend.ogg" />
      </effect>
      <effect type="bullet">
        <emitter>
          <explosion type="list">
            <effect type="graphical-effect">
              <name value="bullet-explosion-mini" />
  	          <time value="0.8" />
            </effect>
            <effect type="sound">
              <name value="data/sounds/Lugaro/firestart.ogg" />
            </effect>
          </explosion>
          <effect type="list">        
            <effect type="damage">
              <damage-type value="fire"/>
              <amount calc="1 * intelligence" />
            </effect>
            <effect type="knockback">
              <amount calc="0.3"/>
            </effect>
          </effect>

          <range calc="12.0" />
          <speed value="3.0" />
          <ttl value="1.0" />
          <count value="1" />
          <width value="12" />
          <acceleration value="5.0" />
          <speed-fuzziness value="1.0"/>
          <filter value="player,wall,obstacle"/>
          <bullet value="data/physicals/bullets/flaming-arrow.xml" />
        </emitter>
      </effect>
    </effect>
  </effect>

  <cast-time-effect type="list" >
    <effect type="graphical-effect">
      <name value="magic-circle-1"/>
      <time value="0.2"/>
    </effect>
    <effect type="graphical-effect">
      <name value="magic-circle-3"/>
      <time value="0.2"/>
    </effect>
    <effect type="modify">
      <aspect value="speed" />
      <amount value="0.0" />
    </effect>
  </cast-time-effect>

  <delay-effect type="modify">
      <aspect value="speed" />
      <amount value="0.0" />
  </delay-effect>

  <manacost calc="20.0" />
  <casttime calc="0.2" />
  <delay calc="2.0" />
  <cooldown value="3.2" />

  <ai-hint>
    <player-distance>6.0</player-distance>
    <player-angle>20.0</player-angle>
  </ai-hint>
</root>
