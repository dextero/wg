<root type="ability" class="melee">

  <name>$ABI_WEAPONS_POWERSLASH</name>
  <description>$ABI_WEAPONS_POWERSLASH_DESC</description>
  <icon>data/abilities/weapons/description-0.png</icon>
  <unavailable-icon>data/abilities/weapons/description-1.png</unavailable-icon>

  <!-- power = 1x cho, 2x mel, 1x san, 4x phl -->
  <power calc="0.2*((1*choleric+2*melancholic+1*sanguine+4*phlegmatic)/sqrt(1^2 + 2^2 + 1^2 + 4^2))*(((1*choleric+2*melancholic+1*sanguine+4*phlegmatic)/(sqrt(1^2+2^2+1^2+4^2)*sqrt(max(1,choleric^2+melancholic^2+sanguine^2+phlegmatic^2))))^10)"/>
  
  <effect type="list">
    <effect type="damage">
      <amount calc="7.5 * (1 + power)" />
    </effect>
    <effect type="knockback">
      <amount calc="8.5"/>
    </effect>
  </effect>

  <self-effect type="graphical-effect">
    <name value="magic-circle-2"/>
    <time value="0.35"/>
  </self-effect>  
  
  <range value="1.2" />
  <width value="80.0" />

  <manacost calc="3.0 * (1 + power)" />
  <casttime value="0.09" />
  <delay value="0.05" />
  <cooldown value="0.40" />
  
</root>