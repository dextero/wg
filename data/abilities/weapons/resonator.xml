      </effect>
    </effect>
    <effect type="area">
      <area calc="2.7"  />
      <filter value="hostiles" />
      <effect type="area">
        <area calc="2.7"  />
        <filter value="player" />
        <effect type="knockback">
           <amount calc="0.6 * (1 + (0.05 * (1 * choleric + 4 * melancholic + 0 * sanguine + 4 * phlegmatic)))"/>
        </effect>
      </effect>
    </effect>
    <effect type="area">
      <area calc="3.2"  />
      <filter value="hostiles" />
      <effect type="area">
        <area calc="3.2"  />
        <filter value="player" />
        <effect type="knockback">
           <amount calc="1.2 * (1 + (0.05 * (1 * choleric + 4 * melancholic + 0 * sanguine + 4 * phlegmatic)))"/>
        </effect>
      </effect>
    </effect>
  </effect>

