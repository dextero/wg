    <effect type="sound">
      <name value="data/sounds/Lugaro/consolesuccess.ogg" />
    </effect>
    <effect type="area">
      <area calc="2.2"  />
      <filter value="hostiles" />
      <effect type="area">
        <area calc="2.2"  />
        <filter value="player" />
        <effect type="knockback">
           <amount calc="0.3 * (1 + (0.05 * (1 * choleric + 4 * melancholic + 0 * sanguine + 4 * phlegmatic)))"/>
