<root type="ability" class="bullet">

  <name>Electrostatics</name>
  <description>
A direct extension of the &quot;Wandering electron&quot; spell. The difference in the electric potentials between the target and it&apos;s nearest environment causes a temporary transition of electric charges.
  </description>
  <icon>data/abilities/weapons/electrostatics.png</icon>
  <stats desc="deals $1 lightning damage
$2% chance for stun
deals $3 lightning damage per $4 nearby hostiles
">
    <param name="1" calc="7.0 * (1 + power)" />
	<param name="2" calc="0.01 * power" />
	<param name="3" calc="4 * (1 + power)" />
	<param name="4" calc="4 + (0.4 * power)" />
  </stats>

  <!-- power = 3x cho, 2x mel, 4x san, 1x phl -->
  <power calc="0.2 * dot(3, choleric, 2, melancholic, 4, sanguine, 1, phlegmatic)"/>

  <explosion type="list">
    <effect type="sound">
      <name value="data/sounds/sparks.ogg" /> 
    </effect>
    <effect type="graphical-effect">
      <name value="shield" />
      <time calc="0.1"/>
    </effect>
  </explosion>
  
  <effect type="list">
    <effect type="graphical-effect">
      <name value="shield" />
      <time calc="0.1"/>
    </effect>
    <effect type="graphical-effect">
      <name value="shield" />
      <time calc="0.1"/>
    </effect>
    <effect type="damage">
      <damage-type value="lightning"/>
      <amount calc="7.0 * (1 + power)"/>
    </effect>
    <effect type="chance">
      <chance calc="0.01 * power"/>
      <effect type="non-cumulative">
        <effect type="timed">
        <time calc="0.5"/>
          <effect type="stun" />
        </effect>
      </effect>
    </effect>

    <effect type="retarget">
      <target-chooser>
        <filter value="hostiles" />
        <range calc="1.0" />
        <angle value="360.0" />
        <aim-at-ground value="1"/>
        <count calc="4 + (0.4 * power)" />
      </target-chooser>
      <effect type="list">
        <effect type="linked-graphical-effect">
          <name value="straight-lightning" />
          <time value="0.3" />
        </effect>
        <effect type="damage">
          <damage-type value="lightning"/>
          <amount calc="4.0 * (1 + power)" />
        </effect>
      </effect>
    </effect>
  </effect>

  <self-effect type="sound">
    <name value="data/sounds/wzzzz.ogg" />
  </self-effect>

  <range calc="18.0" />
  <speed value="8.5" />
  <acceleration value="3.0" />
  <count value="1" />
  <width value="10" />
  <ttl calc="1.0" />
  <explode-on-fade value="1" />
  <bullet value="data/physicals/bullets/electron.xml" />
  <extra-offset value="0.2"/>
  <bullet-angular-speed value="180"/>

  <manacost calc="4.5 * (1 + 0.22 * power)" />
  <casttime calc="0.09" />
  <delay calc="0.05" />
  <cooldown calc="0.70" />
</root>
