<root type="ability" class="melee">

  <name>$ABI_WEAPONS_BURNING_HANDS</name>
  <description>$ABI_WEAPONS_BURNING_HANDS_DESC</description>
  <icon>data/abilities/weapons/burning-hands-0.png</icon>
  <unavailable-icon>data/abilities/weapons/burning-hands-1.png</unavailable-icon>

  <!-- power = 4x cho, 2x mel, 2x san, 0x phl -->
  <power calc="0.2*((4*choleric+2*melancholic+2*sanguine+0*phlegmatic)/sqrt(4^2 + 2^2 + 2^2 + 0^2))*(((4*choleric+2*melancholic+2*sanguine+0*phlegmatic)/(sqrt(4^2+2^2+2^2+0^2)*sqrt(max(1,choleric^2+melancholic^2+sanguine^2+phlegmatic^2))))^10)"/>

  <effect type="list">
    <effect type="knockback">
      <amount calc="3.0" />
    </effect>
    <effect type="damage">
      <damage-type value="fire"/>
      <amount calc="11.0 * (1 + power) " />
    </effect>
    <effect type="graphical-effect">
      <name value="bullet-explosion-mini" />
      <time value="0.8" />
    </effect>
  </effect>	

  <self-effect type="graphical-effect">
    <name value="magic-circle-3"/>
    <time value="0.35"/>
  </self-effect>

  <range value="1.1" />
  <width value="75.0" />

  <manacost calc="11.0 * (1 + power)" />
  <casttime calc="0.09" />
  <delay calc="0.05" />
  <cooldown calc="0.40" />

</root>
