<root type="ability" class="bullet">

  <name>Meteor</name>
  <description>
A huge ball of engulfing flames, exploding on any collision.
	
Bonus for this spell depends:
  totally on choleric rune
  not at all on melancholic rune
  extremely on sanguine rune
  barely on phlegmatic rune
  </description>
  <icon>data/abilities/weapons/fireball.png</icon>

  <!-- power = 5x cho, 0x mel, 4x san, 1x phl -->
  <power calc="0.2 * dot(5, choleric, 0, melancholic, 4, sanguine, 1, phlegmatic)"/>
  
  <explosion type="list">
    <effect type="sound">
      <name value="data/sounds/Lugaro/break.ogg" />
    </effect>
    <effect type="console">
      <text>[
        shake-camera 2 0.05 10
      ]</text>
    </effect>
    <effect type="graphical-effect">
      <name value="bullet-explosion" />
      <time value="0.8" />
    </effect>
    <effect type="graphical-effect">
      <time value="0.1" />
      <name value="smallfireball" />
    </effect>

    <effect type="bullet">
      <emitter>
        <explosion type="list">
          <effect type="graphical-effect">
            <name value="flames" />
            <time value="0.06" />
          </effect>
          <effect type="graphical-effect">
            <name value="firearrow-trail" />
            <time value="0.06" />
          </effect>
        </explosion>
        <effect type="list">
          <effect type="damage">
            <damage-type value="fire"/>
            <amount calc="7.5" />
          </effect>
          <effect type="knockback">
            <amount calc="5 "/>
          </effect>
        </effect>
        <flight-effect type="graphical-effect">
          <name value="bullet-explosion"/>
          <time value="0.3" />
        </flight-effect>
        <range calc="12.0" />
        <speed value="5.8" />
        <ttl calc="0.3" />
        <count calc="18" />
        <width value="340" />
        <acceleration value="-1.0" />
        <bullet value="data/physicals/bullets/invisible-bullet.xml" />
<!--        <filter value="monster,wall,door" />  -->
      </emitter>
    </effect>
  </explosion>

  <effect type="list">
    <effect type="damage">
      <damage-type value="fire"/>
      <amount calc="12" />
    </effect>
  </effect>

  <flight-effect type="list">
    <effect type="recastable">
      <recast value="0.2" />
      <time value="3.0" />
      <effect type="graphical-effect">
        <name value="bullet-explosion-mini"/>
        <time value="0.3"/>
      </effect>
    </effect>
    <effect type="graphical-effect">
      <name value="bullet-explosion-mini"/>
      <time value="0.3"/>
    </effect>
    <effect type="recastable">
      <recast value="0.2" />
      <time value="3.0" />
      <effect type="graphical-effect">
        <name value="flames"/>
        <time value="0.3"/>
      </effect>
    </effect>
    <effect type="graphical-effect">
      <name value="flames"/>
      <time value="0.2"/>
    </effect>  
  </effect>

  <cast-time-effect type="modify">
    <aspect value="speed" />
    <amount value="0.2" />
  </cast-time-effect>

  <delay-effect type="modify">
    <aspect value="speed" />
    <amount value="0.2" />
  </delay-effect>
  
  <range value="12.0" />
  <speed calc="6.0" />
  <acceleration value="1.0" />
  <explode-on-fade value="1" />
  <count calc="1" />
  <width calc="3.2" />
  <ttl calc="0.5 + rnd(0, 1.0)" />
  <bullet value="data/physicals/bullets/invisible-bullet.xml" />
<!--  <filter value="monster,wall,door"/> -->

  <manacost calc="16.0 * (1 + 0.66 * power)" />
  <casttime calc="0.09" />
  <delay calc="0.05" />
  <cooldown value="1.60" />

</root>
