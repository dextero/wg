<root type="ability" class="bullet">

  <name>Fire arrow</name>
  <description>
A simple fire arrow, dealing damage and knocking enemies backward. This arrow can fly through enemies, so you can hit a few monsters in a row.

Bonus for this spell depends:
  heavily on choleric rune
  not at all on melancholic rune
  heavily on sanguine rune
  mildly on phlegmatic rune
  </description>
  <icon>data/abilities/weapons/firearrow-0.png</icon>
  <unavailable-icon>data/abilities/weapons/firearrow-1.png</unavailable-icon>

  <!-- power = 3x cho, 0x mel, 3x san, 2x phl -->
  <power calc="0.2 * dot(3, choleric, 0, melancholic, 3, sanguine, 2, phlegmatic)"/>
  
  <flight-effect type="list">
    <effect type="graphical-effect">
      <name value="firearrow-trail" />
      <time calc="0.6 + (0.05 * power)" />
    </effect>

    <effect type="recastable">
      <time calc="0.6 + (0.05 * power)" />
      <recast value="0.09"/>
      <effect type="list">
        <effect type="retarget">
          <target-chooser>
            <filter value="hostiles,obstacle"/>
            <range calc="0.35"/>
            <angle value="360.0"/>
          </target-chooser>
          <effect type="list">
            <effect type="damage">
              <damage-type value="fire"/>
              <amount calc="7.0 * (1 + power)" />
            </effect>
   	        <effect type="chance">
              <chance calc="0.6"/>
              <effect type="knockback">
                <amount calc="0.5"/>
              </effect>
            </effect>
          </effect>
        </effect>
      </effect>
    </effect>
  </flight-effect>

  <explosion type="list">
  	<effect type="graphical-effect">
      <name value="bullet-explosion-mini" />
  	  <time value="0.8" />
  	</effect>
	<effect type="sound">
		<name value="data/sounds/Lugaro/firestart.ogg" />
	</effect>
  </explosion>

  <range calc="7.0" />
  <speed calc="6.0" />
  <acceleration value="1.0" />
  <explode-on-fade value="1" />
  <count calc="1" /> <!-- min(3,lvl) -->
  <width calc="0.5" /> <!-- + min(lvl-1,3)*12" -->
  <ttl calc="0.6 + (0.05 * power)" />
  <bullet value="data/physicals/bullets/flaming-arrow.xml" />
  <filter value="wall"/>

  <manacost calc="5 * (1 + 0.66 * power)" />
  <casttime calc="0.09" />
  <delay calc="0.05" />
  <cooldown value="0.65" />

</root>
