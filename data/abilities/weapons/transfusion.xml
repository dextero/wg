<root type="ability" class="self">

  <name>Transfusion</name>
  <description>
Chain of vampyric bolts draining life from enemies.

Bonus for this spell depends:
  mildly on choleric rune
  heavily on melancholic rune
  barely on sanguine rune
  mildly on phlegmatic rune  
  </description>
  <icon>data/abilities/weapons/transfusion.png</icon>
  <stats desc="deals $1-$2 of lightning damage
transfers $3-$4 of hit points">
    <param name="1" calc="1.5 * (1 + power)" />
    <param name="2" calc="8 * 1.5 * (1 + power)" />
    <param name="3" calc="0.5 * (1 + power)" />
    <param name="4" calc="8 * 0.5 * (1 + power)" />
  </stats>
                  

  <!-- power = 2x cho, 3x mel, 1x san, 2x phl -->
  <power calc="0.2 * dot(2, choleric, 3, melancholic, 1, sanguine, 2, phlegmatic)"/>

  <effect type="list">
    <effect type="graphical-effect">
      <name value="magic-circle-4"/>
      <time value="0.45"/>
    </effect>
    <effect type="recastable">
      <recast value="0.25"/>
      <time value="7.87"/>
      <effect type="list">
        <effect type="sound">
          <name value="data/sounds/EL/thunder1.ogg" />
          <name value="data/sounds/EL/thunder2.ogg" />
          <name value="data/sounds/EL/thunder3.ogg" />
          <name value="data/sounds/EL/thunder4.ogg" />
          <name value="data/sounds/EL/thunder5.ogg" />
          <name value="data/sounds/EL/thunder6.ogg" />
          <name value="data/sounds/EL/thunder7.ogg" />
        </effect>
        <effect type="retarget">
          <target-chooser>
            <filter value="hostiles"/>
            <range calc="1.9" />
            <angle value="60.0"/>
            <aim-at-ground value="1"/>
            <count calc="1" />
          </target-chooser>
          <effect type="list">
            <effect type="linked-graphical-effect">
              <name value="lightning-red" />
              <time value="0.25" />
              <offset-x value="-0.25"/>
              <offset-y value="0.25"/>
            </effect>
            <effect type="damage">
              <damage-type value="lightning"/>
              <amount calc="1.5 * (1 + power)" />
            </effect>
            <effect type="transfer-life">
              <amount calc="0.5 * (1 + power)" />
            </effect>
          </effect>
        </effect>
        <effect type="retarget">
          <target-chooser>
            <filter value="hostiles"/>
            <range calc="1.9" />
            <angle value="60.0"/>
            <aim-at-ground value="1"/>
            <count calc="1" />
          </target-chooser>
          <effect type="list">
            <effect type="linked-graphical-effect">
              <name value="lightning-red" />
              <time value="0.25" />
              <offset-x value="0.25"/>
              <offset-y value="0.25"/>
            </effect>
            <effect type="damage">
              <damage-type value="lightning"/>
              <amount calc="1.5 * (1 + power)" />
            </effect>
            <effect type="transfer-life">
              <amount calc="0.5 * (1 + power)" />
            </effect>
          </effect>
        </effect>
      </effect>
    </effect>
    <effect type="recastable">
      <recast value="0.40"/>
      <time value="8.0"/>
      <effect type="list">
        <effect type="graphical-effect">
          <name value="magic-circle-5"/>
          <time value="0.41"/>
        </effect>
        <effect type="graphical-effect">
          <name value="magic-circle-3"/>
          <time value="0.25"/>
        </effect>
        <effect type="graphical-effect">
          <name value="magic-circle-1"/>
          <time value="0.7"/>
        </effect>
      </effect>
    </effect>
    <effect type="timed">
      <time value="8.0" />
      <effect type="modify">
        <aspect value="speed" />
        <amount value="0.2" />
      </effect>
    </effect>
  </effect>

  <cast-time-effect type="list" >
    <effect type="modify">
      <aspect value="speed" />
      <amount value="0.2" />
    </effect>
    <effect type="graphical-effect">
      <name value="magic-circle-3"/>
      <time value="0.15"/>
    </effect>
    <effect type="graphical-effect">
      <name value="magic-circle-1"/>
      <time value="0.2"/>
    </effect>
  </cast-time-effect>

  <self-effect type="modify">
    <aspect value="speed" />
    <amount value="0.2" />
  </self-effect>

  <manacost value="2.0" />
  <casttime calc="0.15" />
  <delay calc="0.7" />
  <cooldown calc="0.60" />

  <focus-mana-cost calc="15 * (1 + 0.22 * power)" />
  <focus-max-duration value="8.0" />

</root>
