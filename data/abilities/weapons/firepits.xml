<root type="ability" class="bullet">

  <name>Fire pits</name>
  <description>
The mage summons two pits full of molten fire and sulphur. They appear in front of the mage, and any bypassing monster is captured and burned for a certain period of time.

Bonus for this spell depends:
  barely on choleric rune
  heavily on melancholic rune
  barely on sanguine rune
  heavily on phlegmatic rune  
  </description>
  <icon>data/abilities/weapons/firepits.png</icon>

  <!-- power = 1x cho, 3x mel, 1x san, 3x phl -->
  <power calc="0.2 * dot(1, choleric, 3, melancholic, 1, sanguine, 3, phlegmatic)"/>
  
  <explosion type="bullet">
    <emitter>
      <speed value="0.0" />
      <ttl value="8.1" />
      <count value="1" />
      <width value="0" />
      <bullet value="data/physicals/bullets/invisible-bullet.xml" />
      <filter value="none" />
      <flight-effect type="list">
        <effect type="graphical-effect">
          <time value="7.7" />
          <name value="smoke" />
        </effect>
        <effect type="graphical-effect">
          <time value="7.7" />
          <name value="heal" />
        </effect>
        <effect type="graphical-effect">
          <time value="7.7" />
          <name value="heal" />
        </effect>
        <effect type="graphical-effect">
          <time value="8.0" />
          <name value="flames" />
        </effect>
        <effect type="sound">
          <name value="data/sounds/Lugaro/fire.ogg" />
        </effect>
        <effect type="recastable">
          <time value="8.0" />
          <recast value="4.1"/>
          <effect type="sound">
            <name value="data/sounds/Lugaro/fire.ogg" />
          </effect>
        </effect>      
        <effect type="recastable">
          <time value="20" />
          <recast value="0.2"/>
          <effect type="area">
            <filter value="hostiles" />
            <area calc="0.2" />
            <effect type="modify">
              <aspect value="speed" />
              <amount value="0.0" />
            </effect>
          </effect>
        </effect>
        <effect type="recastable">
          <time value="20" />
          <recast value="1.0"/>
          <effect type="area">
            <filter value="hostiles" />
            <area calc="0.2" />
            <effect type="damage">
              <damage-type value="fire"/>
              <amount calc="8 * (1 + power)"/>
            </effect>
          </effect>
        </effect>
      </flight-effect>
	</emitter>  
  </explosion>

  <cast-time-effect type="list" >
    <effect type="modify">
      <aspect value="speed" />
      <amount value="0.2" />
    </effect>
  </cast-time-effect>
  <delay-effect type="list" >
    <effect type="modify">
      <aspect value="speed" />
      <amount value="0.2" />
    </effect>
    <effect type="graphical-effect">
      <name value="magic-circle-3"/>
      <time value="0.4"/>
    </effect>
    <effect type="graphical-effect">
      <name value="magic-circle-2"/>
      <time value="0.3"/>
    </effect>
    <effect type="graphical-effect">
      <name value="magic-circle-1"/>
      <time value="0.2"/>
    </effect>
  </delay-effect>

  <range calc="12.0" />
  <speed calc="10.0" />
  <acceleration value="-30.0" />
  <filter value="wall"/>
  <explode-on-fade value="1" />
  <count value="2" />
  <width calc="30.0" />
  <ttl value="0.3" />
  <bullet value="data/physicals/bullets/invisible-bullet.xml" />

  <manacost calc="20 * (1 + 0.66 * power)" />
  <casttime calc="0.09" />
  <delay calc="0.15" />
  <cooldown calc="3.96" />

</root>
