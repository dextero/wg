<root type="ability" class="bullet">

  <name>Electron</name>
  <description>
Basic electricity spell. Inflicts small damage and has a chance to stun the target.

Bonus for this spell depends:
  barely on choleric rune
  extremely on melancholic rune
  mildly on sanguine rune
  mildly on phlegmatic rune
  </description>
  <icon>data/abilities/weapons/electron.png</icon>
  <stats desc="deals $1 lightning damage
$2% chance for stun">
    <param name="1" calc="6.0 * (1 + power)" />
	<param name="2" calc="0.01 * power" />
  </stats>

  <!-- power = 1x cho, 4x mel, 2x san, 2x phl -->
  <power calc="0.2 * dot(1, choleric, 4, melancholic, 2, sanguine, 2, phlegmatic)"/>
 
  <explosion type="list">
    <effect type="sound">
      <name value="data/sounds/sparks.ogg" /> 
    </effect>
    <effect type="graphical-effect">
      <name value="shield" />
      <time calc="0.1"/>
    </effect>
  </explosion>

  <effect type="list">
    <effect type="graphical-effect">
      <name value="shield" />
      <time calc="0.1"/>
    </effect>
    <effect type="graphical-effect">
      <name value="shield" />
      <time calc="0.1"/>
    </effect>
    <effect type="damage">
      <damage-type value="lightning"/>
      <amount calc="6.0 * (1 + power)"/>
    </effect>
    <effect type="chance">
      <chance calc="0.01 * power"/>
      <effect type="non-cumulative">
        <effect type="timed">
          <time calc="0.5"/>
          <effect type="stun" />
        </effect>
      </effect>
    </effect>
  </effect>

  <self-effect type="sound">
    <name value="data/sounds/wzzzz.ogg" />
  </self-effect>

  <range calc="18.0" />
  <speed value="8.5" />
  <acceleration value="3.0" />
  <count calc="1" />
  <width calc="10" />
  <ttl calc="1.0" />
  <explode-on-fade value="1" />
  <bullet value="data/physicals/bullets/electron.xml" />
  <extra-offset value="0.2"/>
  <bullet-angular-speed value="180"/>
  
  <manacost calc="3.6 * (1 + 0.22 * power)" />
  <casttime calc="0.09" />
  <delay calc="0.05"  />
  <cooldown calc="0.60" />

</root>

