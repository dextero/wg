<root type="ability" class="bullet">

  <name>Sting</name>
  <description>
A poisonous thorn injuring enemy.
  
Bonus for this spell depends:
  barely on choleric rune
  extremely on melancholic rune
  mildly on sanguine rune
  barely on phlegmatic rune  
  </description>
  <icon>data/abilities/weapons/sting.png</icon>

  <!-- power = 1x cho, 4x mel, 2x san, 1x phl -->
  <power calc="0.2 * dot(1, choleric, 4, melancholic, 2, sanguine, 1, phlegmatic)"/>
  
  <effect type="non-cumulative">
    <effect type="list">
      <effect type="damage">
        <damage-type value="poison"/>
        <amount calc="0.5 + (0.05 * power)" />
      </effect>
      <effect type="graphical-effect">
        <name value="colorize-green" />
        <time calc="6.0 + (3.0 * power)" />
      </effect>
      <effect type="timed">
        <time calc="6.0 + (3.0 * power)" />
        <effect type="damage">
          <damage-type value="poison"/>
          <amount calc="2.25 + (0.25 * power)"/>
        </effect>
      </effect>

	  <!-- 2lvl - stun? -->
      <effect type="check-level">
        <amount value="2.0"/>
        <effect type="timed">
          <time calc="2.0"/>
          <effect type="stun"/>     
        </effect>
      </effect>
    </effect>    
  </effect>

  <range value="12.0" />
  <speed value="11.0" />
  <acceleration value="1.0" />
  <explode-on-fade value="0" />
  <ttl value="0.6" />
  <bullet value="data/physicals/bullets/sting.xml" />

  <manacost calc="9.0 * (1 + 0.66 * power)" />
  <casttime value="0.09" />
  <delay value="0.05" />
  <cooldown value="0.7" />
  
</root>
