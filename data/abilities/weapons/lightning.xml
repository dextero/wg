<root type="ability" class="self">

  <name>$ABI_WEAPONS_LIGHTNING</name>
  <description>$ABI_WEAPONS_LIGHTNING_DESC</description>
  <icon>data/abilities/weapons/lightning-0.png</icon>
  <unavailable-icon>data/abilities/weapons/lightning-1.png</unavailable-icon>

  <!-- power = 2x cho, 2x mel, 3x san, 3x phl -->
  <!-- power = (0.05 * (2 * choleric + 2 * melancholic + 3 * sanguine + 3 * phlegmatic)) --> 
  
  <effect type="list">
    <effect type="sound">
      <name value="data/sounds/EL/thunder1.ogg" />
      <name value="data/sounds/EL/thunder2.ogg" />
      <name value="data/sounds/EL/thunder3.ogg" />
      <name value="data/sounds/EL/thunder4.ogg" />
      <name value="data/sounds/EL/thunder5.ogg" />
      <name value="data/sounds/EL/thunder6.ogg" />
      <name value="data/sounds/EL/thunder7.ogg" />
    </effect>
    <effect type="retarget">
      <target-chooser>
        <filter value="hostiles, obstacle"/>
        <range calc="5.2" />
        <angle value="30.0"/>
        <aim-at-ground value="1"/>
      </target-chooser>
      <effect type="list">
        <effect type="damage">
          <damage-type value="lightning"/>
          <amount calc="18 * (1 + (0.05 * (2 * choleric + 2 * melancholic + 3 * sanguine + 3 * phlegmatic)))" />
        </effect>
        <effect type="knockback">
          <amount value="2.0" />
        </effect>
        <effect type="linked-graphical-effect">
          <name value="lightning" />
          <offset-x value="-0.25"/>
          <offset-y value="0.5"/>
          <time value="0.25" />
        </effect>
      </effect>
    </effect>
  </effect>

  <cast-time-effect type="list">
    <effect type="modify">
      <aspect value="speed" />
      <amount value="0.2" />
    </effect>
    <effect type="graphical-effect">
      <name value="magic-circle-4"/>
      <time value="0.30"/>
    </effect>
  </cast-time-effect>
  <delay-effect type="modify">
  	<aspect value="speed" />
  	<amount value="0.2" />
  </delay-effect>

  <manacost value="12 * (1 + (0.05 * (2 * choleric + 2 * melancholic + 3 * sanguine + 3 * phlegmatic)))" />
  <casttime calc="0.30" />
  <delay calc="0.50" />
  <cooldown calc="0.50" />

</root>
