<root type="ability" class="bullet">

  <name>$ABI_WEAPONS_DRAGONBREATH</name>
  <description>$ABI_WEAPONS_DRAGONBREATH_DESC</description>
  <icon>data/abilities/weapons/dragonbreath-0.png</icon>
  <unavailable-icon>data/abilities/weapons/dragonbreath-1.png</unavailable-icon>

  <!-- power = 3x cho, 1x mel, 2x san, 2x phl -->
  <power calc="0.2 * dot(3, choleric, 1, melancholic, 2, sanguine, 2, phlegmatic)"/>
  
  <explosion type="list">
    <effect type="graphical-effect">
      <name value="bullet-explosion" />
      <time value="1.0" />
    </effect>
    <effect type="sound">
      <name value="data/sounds/Lugaro/firestart.ogg" />
    </effect>
    <effect type="area">
      <area calc="0.4" />
      <filter value="hostiles,obstacle" />
      <effect type="damage">
        <damage-type value="fire"/>
        <amount calc="12.0 * (1 + power)" />
      </effect>
    </effect>
    <effect type="bullet">
      <emitter>
        <extra-offset value="0.1"/>
        <range value="12.0" />
        <speed value="5.0" />
        <acceleration value="-3.0" />
        <ttl value="0.8" />
        <count value="10" />
        <width value="360" />
        <spread-type value="shotgun"/>
        <speed-fuzziness value="0.15" />
        <bullet value="data/physicals/bullets/firebolt.xml" />
        <filter value="wall" />
        <flight-effect type="list">
          <effect type="recastable" >
            <recast value="0.20" />
            <time value="3.0" />
            <effect type="area">
              <area calc="0.4" />
              <filter value="hostiles,obstacle" />
              <effect type="damage">
                <damage-type value="fire"/>
                <amount calc="12.0 * (1 + power)" />
              </effect>
            </effect>
          </effect>
          <effect type="recastable" >
            <recast value="0.08" />
            <time value="3.0" />
            <effect type="bullet">
              <emitter>
                <speed value="0.0" />
                <acceleration value="0.0" />
                <ttl value="0.0" />
                <count value="1" />
                <width value="0" />
                <explode-on-fade value="1" />
                <bullet value="data/physicals/bullets/fireball.xml" />
                <filter value="none" />    
                <explosion type="list"> 
                  <effect type="graphical-effect">
                    <name value="bullet-explosion-mini" />
                    <time value="0.8" />
                  </effect>
                </explosion>
              </emitter>
            </effect>
          </effect>
          <effect type="recastable" >
            <recast value="0.04" />
            <time value="0.05" />
            <effect type="bullet">
              <emitter>
                <speed value="0.0" />
                <acceleration value="0.0" />
                <ttl value="0.0" />
                <count value="1" />
                <width value="0" />
                <explode-on-fade value="1" />
                <bullet value="data/physicals/bullets/fireball.xml" />
                <filter value="none" />    
                <explosion type="list"> 
                  <effect type="graphical-effect">
                    <name value="bullet-explosion-mini" />
                    <time value="0.8" />
                  </effect>
                </explosion>
              </emitter>
            </effect>
          </effect>
        </flight-effect>
      </emitter>  
    </effect>  
  </explosion>

  <range calc="12.0" />
  <speed value="7.0" />
  <acceleration value="-15.0" />
  <speed-fuzziness value="0.15" />
  <width value="5" />
  <explode-on-fade value="1" />
  <ttl value="0.5" />
  <bullet value="data/physicals/bullets/mine.xml" />
  <bullet-angular-speed value="-1440" />
  <filter value="wall" />

  <manacost calc="30 * (1 + 0.66 * power)" />
  <casttime calc="0.09" />
  <delay calc="0.05" />
  <cooldown value="1.30" />

</root>
