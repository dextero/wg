<root type="ability" class="bullet">

  <name>$ABI_WEAPONS_FIREBOLT</name>
  <trigger></trigger>
  <icon>data/abilities/weapons/firebolt-0.png</icon>
  <unavailable-icon>data/abilities/weapons/firebolt-1.png</unavailable-icon>
  <description>$ABI_WEAPONS_FIREBOLT_DESC</description>

  <!-- power = 5x cho, 1x mel, 2x san, 0x phl -->
  <!-- power = (0.2*(1.0 * choleric + 0.2 * melancholic + 0.4 * sanguine)) --> 
  
  <explosion type="list">
  	<effect type="graphical-effect">
  	  <time value="0.8" />
      <name value="bullet-explosion-small" />
  	</effect>
	<effect type="sound">
		<name value="data/sounds/Lugaro/firestart.ogg" />
	</effect>
    <effect type="area">
      <area calc="0.5" />
      <filter value="hostiles,obstacle" />
      <effect type="list">
        <effect type="damage">
          <amount calc="4.0 * (1 + (0.2*(1.0 * choleric + 0.2 * melancholic + 0.4 * sanguine)))" />
          <damage-type value="fire"/>
        </effect>
        <effect type="knockback">
          <amount calc="1.0"/>
        </effect>
      </effect>
    </effect>
  </explosion>

  <manacost calc="2.0 * (1 + (0.2*(1.0 * choleric + 0.2 * melancholic + 0.4 * sanguine)))" />
  <range calc="14.0" />
  <speed value="6.0" />
  <acceleration value="1.0" />
  <explode-on-fade value="1" />
  <ttl value="0.6" />
  <bullet value="data/physicals/bullets/firebolt.xml" />
  <casttime calc="0.09" />
  <delay calc="0.10" />
  <cooldown value="0.40" />

</root>
