<root type="ability" class="bullet">

  <name>$ABI_WEAPONS_BLADES</name>
  <description>$ABI_WEAPONS_BLADES_DESC</description>
  <icon>data/abilities/weapons/blades-0.png</icon>
  <unavailable-icon>data/abilities/weapons/blades-1.png</unavailable-icon>

  <!-- power = 3x cho, 0x mel, 4x san, 1x phl -->
  <!-- power = (0.05 * (3 * choleric + 0 * melancholic + 4 * sanguine + 1 * phlegmatic)) -->

  <flight-effect type="list">
    <effect type="recastable">
      <recast value="0.2"/>
      <time calc="1.4" />
      <effect type="area">
        <filter value="hostiles"/>
        <area calc="0.8"/>
        <effect type="list">
          <effect type="damage">
            <damage-type value="vorpal"/>
            <amount calc="3.0 * (1 + (0.05 * (3 * choleric + 0 * melancholic + 4 * sanguine + 1 * phlegmatic)))" />
          </effect>
          <effect type="knockback">
            <amount calc="1.3"/>
          </effect>
        </effect>
      </effect>
    </effect>
  </flight-effect>

  <delay-effect type="sound">
    <name value="data/sounds/shotgun.wav" />
  </delay-effect>
  
  <speed calc="6.0" />
  <acceleration value="2.0" />
  <count calc="3 + ln(1 + (0.05 * (3 * choleric + 0 * melancholic + 4 * sanguine + 1 * phlegmatic)))" />
  <width calc="33.0" />
  <ttl calc="1.4" />
  <bullet value="data/physicals/bullets/firespark.xml" />
  <filter value="none"/>
  <spread-type value="shotgun"/>
  <speed-fuzziness value="0.5" />
  <target-chooser>
    <filter value="hostiles"/>
    <range calc="2.5"/>
    <angle value="180.0"/>
  </target-chooser>
  <time-for-tracking calc="1.4" />
  <turning-speed calc="640.0"/>

  <manacost calc="15 * (1 + (0.05 * (3 * choleric + 0 * melancholic + 4 * sanguine + 1 * phlegmatic)))" />
  <casttime calc="0.09" />
  <delay calc="0.05" />
  <cooldown calc="0.27" />

</root>
