<root type="ability" class="bullet">

  <name>Gorgon shards</name>
  <description>
Throws three explosive shards under incoming enemies.

Bonus for this spell depends:
  totally on choleric rune
  not at all on melancholic rune
  heavily on sanguine rune
  barely on phlegmatic rune  
  </description>
  <icon>data/abilities/weapons/gorgon-shards-0.png</icon>
  <unavailable-icon>data/abilities/weapons/gorgon-shards-1.png</unavailable-icon>

  <!-- power = 5x cho, 0x mel, 3x san, 1x phl -->
  <power calc="0.2 * dot(5, choleric, 0, melancholic, 3, sanguine, 1, phlegmatic)"/>
  
  <explosion type="list">
    <effect type="graphical-effect">
      <name value="bullet-explosion" />
      <time value="1.0" />
    </effect>
    <effect type="sound">
      <name value="data/sounds/Lugaro/firestart.ogg" />
    </effect>
    <effect type="area">
      <area calc="0.4" />
      <filter value="hostiles,obstacle" />
      <effect type="damage">
        <damage-type value="fire"/>
        <amount calc="12.0 * (1 + power)" />
      </effect>
    </effect>
  </explosion>

  <range calc="12.0" />
  <speed value="4.5" />
  <count value="3.0" />
  <acceleration value="-11.0" />
  <speed-fuzziness value="0.80" />
  <width value="65" />
  <spread-type value="shotgun"/>
  <explode-on-fade value="1" />
  <ttl value="0.4" />
  <bullet value="data/physicals/bullets/mine.xml" />
  <bullet-angular-speed value="-1440" />
  <filter value="wall" />

  <manacost calc="10 * (1 + 0.66 * power)" />
  <casttime calc="0.09" />
  <delay calc="0.05" />
  <cooldown value="0.60" />

</root>
