<root type="ability" class="self">

  <name>$ABI_WARLOCK_LIGHTNING</name>
  <description>$ABI_WARLOCK_LIGHTNING_DESC</description>
  <icon>data/player/lightning-strike.png</icon>
  <unavailable-icon>data/player/lightning-strike-grey.png</unavailable-icon>

	<effect type="list">
		<effect type="bullet">
			<emitter>
				<speed value="2.0" />
				<bullet-angular-speed value="270"/>
				<acceleration value="1.0" />
				<ttl value="3.0" />
				<count value="2" />
				<width value="30" />
				<explode-on-fade value="1" />
				<bullet value="data/physicals/black-blade.xml" />
				<filter value="player,obstacle,wall" />
				<target-chooser>
					<filter value="player"/>
					<range calc="2.5"/>
					<angle value="240.0"/>
				</target-chooser>
				<effect type="list">
					<effect type="damage">
						<amount calc="1.0" />
						<damage-type value="vorpal"/>
					</effect>
					<effect type="knockback">
						<amount calc="0.2"/>
					</effect>
				</effect>
			</emitter>
		</effect>
		<effect type="area">
			<area value="2.0"/>
			<filter value="hostiles" />
			<effect type="heal-target">
				<amount value="10.0"/>
			</effect>
		</effect>
		<effect type="retarget">
			<target-chooser>
				<filter value="hostiles"/>
				<range calc="2.0"/>
				<angle value="360.0"/>
				<aim-at-ground value="0" />
				<dead-bodies value="1"/>
			</target-chooser>
			<effect type="list">
				<effect type="annihilate"/>
				<effect type="graphical-effect">
					<name value="blue-explosion-mini"/>
					<time value="0.35"/>
				</effect>
				<effect type="console">
					<text>spawn-physical data/physicals/scarab.xml $X $Y</text>
				</effect>
			</effect>
		</effect>
		<effect type="graphical-effect">
			<name value="magic-circle-2"/>
			<time value="0.35"/>
		</effect>
	</effect>

  <cast-time-effect type="modify">
  	<aspect value="speed" />
  	<amount value="0.2" />
  </cast-time-effect>

  <manacost value="0.0" />
  <casttime value="0.5" />
  <delay value="0.28" />
  <cooldown value="1.9" />
  <ai-hint>
	<player-distance>4.0</player-distance>
	<player-angle>30.0</player-angle>
  </ai-hint>  
</root>
