<root type="ability" class="bullet">

  <explosion type="list">
  	<effect type="graphical-effect">
  		<time value="0.8" />
  		<name value="blue-explosion" />
  	</effect>
  	<effect type="graphical-effect">
        <name value="ice-circle-shockwave" />
        <time value="0.4" />
    </effect>
  	<effect type="area">
  		<area value="2.0" modifiers="level" />
  		<filter value="player" />
  		<effect type="list">
  			<effect type="damage">
  				<amount value="10 + int" />
            	<damage-type value="ice"/>
  			</effect>
			<effect type="graphical-effect">
				<time value="2.050" modifiers="level" linear-gain="0.450" />
				<name value="frost" />
			</effect>
			<effect type="sound">
				<name value="data/sounds/Lugaro/whoosh.ogg" />
			</effect>
            <effect type="non-cumulative">
      			<effect type="timed">
  				    <time value="1.250" modifiers="level" linear-gain="0.450" />
  			    	<effect type="list">
  		    			<effect type="stun" />
  	    			</effect>
      			</effect>
            </effect>
  		</effect>
  	</effect>
<!--    <effect type="delayed" >
        <time value="0.2" /> -->
      	<effect type="area">
  	    	<area value="3.0" modifiers="level" />
      		<filter value="player" />
      		<effect type="list">
      			<effect type="damage">
      				<amount value="5 + int" />
            		<damage-type value="ice"/>
      			</effect>
    			<effect type="graphical-effect">
    				<time value="1.050" modifiers="level" linear-gain="0.250" />
    				<name value="frost" />
    			</effect>
                <effect type="non-cumulative">
                    <effect type="timed">
                    <time value="1" />
                        <effect type="modify">
                            <amount value="0.60" modifiers="level,inv" />
                            <aspect value="speed" />
                        </effect>
                    </effect>
               </effect>
               <effect type="graphical-effect">
                   <time value="1" />
                   <name value="colorize-blue" />
               </effect>

            </effect>
  		</effect>
<!--  	</effect> -->
  </explosion>

  <manacost value="0.0" />
  <range value="12.0" />
  <speed value="5.0" />
  <acceleration value="1.2" />
  <explode-on-fade value="1" />
  <ttl value="3.0" />
  <bullet value="data/physicals/iceball.xml" />
  <filter value="player" />
  <bullet-angular-speed value="-720" />
  <casttime value="0.8" />
  <delay value="0.2" />
  <cooldown value="3" />

  <ai-hint>
    <hp-less>0.5</hp-less>
    <player-distance>3.0</player-distance>
  </ai-hint>

  <cast-time-effect type="list">
      <effect type="modify">
          <aspect value="speed" />
          <amount value="0.2" />
      </effect>
      <effect type="graphical-effect">
          <name value="magic-circle-2"/>
          <time value="0.90"/>
      </effect>
      <effect type="graphical-effect">
          <name value="magic-circle-4"/>
          <time value="0.50"/>
      </effect>
  </cast-time-effect>
  
</root>
